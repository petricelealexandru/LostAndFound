<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LostAndFound</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/basestructure.css" rel="stylesheet" />
    <link href="~/css/home-page.css" rel="stylesheet" />
    <link href="~/css/lost-page.css" rel="stylesheet" />
    <link href="~/css/found-page.css" rel="stylesheet" />
    <link href="~/css/listing-page.css" rel="stylesheet" />
    <link href="~/css/match-page.css" rel="stylesheet" />

    
</head>
<body>
    <header class="content">
        @await Html.PartialAsync("~/Views/Shared/_Header.cshtml")
    </header>
    <div class="content body-class">
        <main>
            @RenderBody()
        </main>
    </div>
    <footer class="content">
        @await Html.PartialAsync("~/Views/Shared/_Footer.cshtml")
    </footer>
    
    <!-- The Modal -->
    <div id="myModal" class="custom-modal">
        <!-- Modal content -->
        <div class="modal-content">
            <span class="close">&times;</span>
            <p>Some text in the Modal..</p>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/ajaxhelper.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
